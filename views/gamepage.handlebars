{{> header}}

<main class="game-page">

<div class="game-title">
  <h1>{{title}}<h1>
</div>



<article class="game-info">
  <div class="game-image-containter">
    <img class="game-image" src="{{url}}" />
  </div>

    <div id="game-rating">
      <h2> {{rating}}/5 </h2>
    </div>

    <div class="game-description">
      <p>
        {{description}}
      </p>
    </div>

</article>

<div class="comment-section">

{{#each comments}}
  {{> comment}}
{{/each}}

</div>


</main>
